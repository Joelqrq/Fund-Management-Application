@model FundManagementApplication.ViewModels.ProfileViewModel

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<!-- Edit Manager Header -->
<div class="container">
    <div class="row>">
        <h4 class="pt-4">Edit Manager Profile</h4>
        <hr>
        <!-- Current Manager Details-->

        <h5 class="mt-2">Current Manager Details</h5>

        <div class="form-group row mt-2">
            <label for="currentManagerID" class="col-sm-2 col-form-label"> Manager ID: </label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="currentInvestorID" value=@Model.ManagerID>
            </div>

            <label for="currentManagerName" class="col-sm-2 col-form-label"> Manager Name: </label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="currentManagerName" value=@Model.ManagerName>
            </div>

            <label for="currentManagerEmail" class="col-sm-2 col-form-label"> Manager Email: </label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="currentManagerEmail" value=@Model.ManagerEmail>
            </div>


        </div>
        <hr>
        <!-- New Investor Details-->
        <h5 class="mt-2">New Manager Details</h5>

        <form asp-controller="Profile">
            <div class="form-group row mt-2">

                <label for="inputNewManagerName" class="col-sm-2 col-form-label mb-3s">Manager Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control mb-3" id="newManagerName" placeholder="New Manager Name" name="name">
                </div>

                <label for="inputNewManagerEmail" class="col-sm-2 col-form-label">Manager Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="newManagerEmail" placeholder="New Manager Email" name="email">
                </div>
            </div>


            <div class="form-group d-flex justify-content-center mt-5 mb-5">
                <button class="btn btn-danger btn-block-danger-secondary mx-5" asp-action="Cancel">Cancel</button>
                <button class="btn btn-success btn-block-success-secondary mx-5" asp-action="Update" formmethod="post"> Update</button>
            </div>
        </form>
    </div>
</div><!-- End of Container -->